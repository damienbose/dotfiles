// Place your key bindings in this file to override the defaults
[
    {
        "key": "cmd+1",
        "command": "workbench.action.openEditorAtIndex1",
        "when": ""
    },
    {
        "key": "cmd+2",
        "command": "workbench.action.openEditorAtIndex2",
        "when": ""
    },
    {
        "key": "cmd+3",
        "command": "workbench.action.openEditorAtIndex3",
        "when": ""
    },
    {
        "key": "cmd+4",
        "command": "workbench.action.openEditorAtIndex4",
        "when": ""
    },
    {
        "key": "cmd+5",
        "command": "workbench.action.openEditorAtIndex5",
        "when": ""
    },
    {
        "key": "cmd+h",
        "command": "git.openFile"
    },
    {
        "key": "cmd+r cmd+w",
        "command": "editor.debug.action.selectionToWatch"
    },
    {
        "key": "ctrl+h",
        "command": "workbench.action.navigateLeft"
    },
    {
        "key": "ctrl+l",
        "command": "workbench.action.navigateRight"
    },
    {
        "key": "ctrl+k",
        "command": "workbench.action.navigateUp"
    },
    {
        "key": "ctrl+j",
        "command": "workbench.action.navigateDown"
    },
    {
        "key": "ctrl+cmd+r",
        "command": "workbench.action.openRecent"
    },
    {
        "key": "alt+j",
        "command": "editor.action.moveLinesDownAction",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "alt+k",
        "command": "editor.action.moveLinesUpAction",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "alt+o",
        "command": "clangd.switchheadersource",
        "when": "editorTextFocus && resourceLangId == 'c' || editorTextFocus && resourceLangId == 'cpp' || editorTextFocus && resourceLangId == 'cuda-cpp' || editorTextFocus && resourceLangId == 'objective-c' || editorTextFocus && resourceLangId == 'objective-cpp'"
    },
    {
        "key": "alt+cmd+o",
        "command": "-clangd.switchheadersource",
        "when": "editorTextFocus && resourceLangId == 'c' || editorTextFocus && resourceLangId == 'cpp' || editorTextFocus && resourceLangId == 'cuda-cpp' || editorTextFocus && resourceLangId == 'objective-c' || editorTextFocus && resourceLangId == 'objective-cpp'"
    },
    {
        "key": "cmd+d",
        "command": "vscode-neovim.lua",
        "args": [
            "local vscode = require('vscode')",
            "vscode.with_insert(function()",
            "   vscode.action('editor.action.addSelectionToNextFindMatch')",
            "end)"
        ]
    },
    // {
    //     "key": "cmd+i",
    //     "command": "vscode-neovim.lua",
    //     "args": [
    //         "local vscode = require('vscode')",
    //         "vscode.with_insert(function()",
    //         "   vscode.action('inlineChat.start')",
    //         "end)"
    //     ] // todo: make this ignore when i'm on terminal
    // },
    {
        "key": "cmd+m",
        "command": "vscode-neovim.restart"
    },
    {
        "key": "cmd+l",
        "command": "workbench.action.pinEditor",
        "when": "!activeEditorIsPinned"
    },
    {
        "key": "cmd+k shift+enter",
        "command": "-workbench.action.pinEditor",
        "when": "!activeEditorIsPinned"
    },
    {
        "key": "cmd+l",
        "command": "workbench.action.unpinEditor",
        "when": "activeEditorIsPinned"
    },
    {
        "key": "cmd+k shift+enter",
        "command": "-workbench.action.unpinEditor",
        "when": "activeEditorIsPinned"
    },
    {
        "key": "alt+m",
        "command": "workbench.action.createTerminalEditor",
        "when": "terminalProcessSupported"
    },
    {
        "key": "ctrl+cmd+h",
        "command": "workbench.action.moveEditorLeftInGroup"
    },
    {
        "key": "cmd+k shift+cmd+left",
        "command": "-workbench.action.moveEditorLeftInGroup"
    },
    {
        "key": "ctrl+cmd+l",
        "command": "workbench.action.moveEditorRightInGroup"
    },
    {
        "key": "cmd+k shift+cmd+right",
        "command": "-workbench.action.moveEditorRightInGroup"
    },
    {
        "key": "shift+enter",
        "command": "workbench.action.terminal.sendSequence",
        "args": {
            "text": "\u001b\r"
        },
        "when": "terminalFocus"
    },
]
